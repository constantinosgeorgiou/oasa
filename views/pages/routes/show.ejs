                                                <li>..</li>
                                                <li>Σύνταγμα</li>
                                                <li>..</li>
                                                <li>..</li>
                                                <li><%= route.end_point %></li>
                                            </ul>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        </div>
    </section>


    <% include ../../partials/footer.ejs %>

