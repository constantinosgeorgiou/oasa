<!DOCTYPE html>
<html>

<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/nav.ejs %>

  <div class="row">
    <h1 style="text-align: center">Sign Up</h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/register" method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="first_name" placeholder="John">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="middle_name" placeholder="Alex">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="last_lame" placeholder="Doe">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="telephone" placeholder="694XXXXXXX">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="afm" placeholder="Α.Φ.Μ.">
        </div>
        <div class="form-group">
          <input class="form-control" type="email" name="email" placeholder="john@doe.com">
        </div>
        <div class="form-group">
          <input class="form-control" type="password" name="password" placeholder="password">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
        </div>
      </form>
      <a href="/">Go Back</a>
    </div>
  </div>

</body>

</html>